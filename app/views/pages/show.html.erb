<%= render partial: "layouts/header-image", locals: {
    text: "Inhalte",
    image: image_url('sanktblasien.JPG'),
    classes: "small-header without-image-header background-position-center" 
} %>

<div class="container">
  <%= link_to t(:back), pages_path, :class => "btn ghost-btn gutter-margin" %>
  <div class="row">
    <div class="col-sm-12 col-md-8 blog-main">
      <div class="blog-post">
        <h2 class="blog-post-title"><%= @page.title %></h2>
        <p class="blog-post-meta">Zuletzt bearbeitet <%= "#{time_ago_in_words(@page.updated_at)} #{t(:ago_by)}" %> by
          <%= link_to @page.user.name, users_path(anchor: @page.user.id) %>
        </p>
        <%= @page.body.html_safe %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 blog-sidebar">
      <%= render "sidebar" %>
    </div>
  </div>
</div>