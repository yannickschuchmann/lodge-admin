<%= render partial: "layouts/header-image", locals: {
    text: "Inhalte",
    image: image_url('sanktblasien.JPG'),
    classes: "small-header background-position-center" 
} %>

<div class="container">
	<%= link_to 'Neuer Eintrag', new_page_path, class: "btn ghost-btn" %>

	<div class="list-group pages article-listing">
	  <% @pages.each do |page| %>
	    <%= link_to page, class: "list-group-item" do %>
	      <%= page.title %>
	      <span class="label label-default label-pill pull-xs-right"><%= "#{time_ago_in_words(page.updated_at)} ago" %></span>
	    <% end %>
	  <% end %>
	</div>
	<br>
</div>
