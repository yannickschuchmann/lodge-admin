<%= link_to 'New User', new_user_path %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>#</th>
    <th colspan="5"></th>
  </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, i| %>
      <tr>
        <th scope="row"><%= i + 1 %></th>
        <td><%= user.name %></td>
        <td><%= user.birthday %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
