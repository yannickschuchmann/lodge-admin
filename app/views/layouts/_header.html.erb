<header class="container">
  <nav class="navbar hidden-sm-down">
    <div class="nav navbar-nav">
      <%= link_to root_path, class: "navbar-brand" do %>
        <img src="<%= image_url('logo.svg')%>">
      <% end %>
      <%= link_to "Start", root_path, class: "nav-item nav-link" + active_url(root_url, "active") %>
      <%= link_to "Inhalte", pages_path, class: "nav-item nav-link" + active_resource("pages", "active") %>
      <%= link_to "Hüttenbuch", guestbook_posts_path, class: "nav-item nav-link" + active_resource("guestbook", "active") %>
      <%= link_to "Adressbuch", users_path, class: "nav-item nav-link" + active_resource("users", "active") %>
    </div>
    <div class="nav navbar-nav">
      <%= link_to current_user.name, edit_user_path(current_user), class: "nav-item nav-link nav-link-user" %>
      <%= render "devise/shared/session_menu" %>
    </div>
  </nav>
  <nav class="navbar mobile hidden-md-up">
    <div class="label">
      <button class="navbar-toggler" type="button">
        &#9776;
      </button>
      <%= link_to root_path, class: "navbar-brand" do %>
          <img src="<%= image_url('logo.svg')%>">
      <% end %>
    </div>
    <div class="navbar-content">
      <ul>
        <li>
          <%= link_to "Start", root_path, class: "nav-item nav-link" + active_url(root_url, "active") %>
        </li>
        <li>
          <%= link_to "Inhalte", pages_path, class: "nav-item nav-link" + active_resource("pages", "active") %>
        </li>
        <li>
          <%= link_to "Hüttenbuch", guestbook_posts_path, class: "nav-item nav-link" + active_resource("guestbook", "active") %>
        </li>
        <li>
          <%= link_to "Adressbuch", users_path, class: "nav-item nav-link" + active_resource("users", "active") %>
        </li>
      </ul>
      <div class="user">
        <small>Eingeloggt als:</small>
        <br>
        <%= current_user.name %>
        <br>
        <%= link_to t(:logout), destroy_user_session_path, class: "nav-item nav-link btn ghost-btn" %>
      </div>
    </div>
  </nav>
</header>